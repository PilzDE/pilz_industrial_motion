<launch>
  <!-- The name of the parameter under which the URDF is loaded -->
  <arg name="robot_description" default="robot_description"/>

  <!-- send urdf to param server -->
  <param name="$(arg robot_description)" textfile="$(find pilz_trajectory_generation)/test/test_robots/robot_mock/robot_mock.urdf"/>

  <!-- The semantic description that corresponds to the URDF -->
  <param name="$(arg robot_description)_semantic" command="$(find xacro)/xacro --inorder
  $(find pilz_trajectory_generation)/test/test_robots/robot_mock/robot_mock.srdf.xacro" />

  <!-- run test -->
  <test pkg="pilz_trajectory_generation" test-name="integrationtest_get_tip_frame" type="integrationtest_get_tip_frame"
  time-limit="120.0" >
  </test>
  <!--launch-prefix="xterm -e gdb - -args"-->

</launch>
